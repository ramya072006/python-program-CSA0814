def print_hollow_square(size):
    if size < 2:
        print("Size should be 2 or larger to create a hollow square.")
        return
    for i in range(size):
        for j in range(size):
            if i == 0 or i == size-1 or j == 0 or j == size-1:
                print("*", end=" ")
            else:
                print(" ", end=" ")
        print()
size = 4
print_hollow_square(size)
